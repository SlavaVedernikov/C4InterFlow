@startuml
!include ..\..\..\..\..\..\..\.c4s\C4_Sequence.puml
SHOW_FOOT_BOXES()

title Big Bank Plc - Internet Banking - Single-Page Application - Change Password - C4 Sequence - Container level

System_Ext(C4InterFlow.SoftwareSystems.ExternalSystem, "External", "")

System_Boundary(BigBankPlc.SoftwareSystems.InternetBanking, "Internet Banking")
    Container(BigBankPlc.SoftwareSystems.InternetBanking.Containers.SinglePageApp, "Single-Page Application", "SPA, JavaScript, Angular", "Provides all the Internet banking functionality to customers via their web browser")
    Container(BigBankPlc.SoftwareSystems.InternetBanking.Containers.APIApplication, "API Application", "API, Java, Spring MVC", "Provides Internet banking functionality via API")
    ContainerDb(BigBankPlc.SoftwareSystems.InternetBanking.Containers.Database, "Database", "Database, Oracle Database Schema", "Stores user registration information, hashed auth credentials, access logs, etc.")
Boundary_End()
System_Ext(BigBankPlc.SoftwareSystems.EMailSystem, "E-Mail System", "The internal Microsoft Exchange system")

Rel(C4InterFlow.SoftwareSystems.ExternalSystem, BigBankPlc.SoftwareSystems.InternetBanking.Containers.SinglePageApp, "Change Password", "HTTPS")
Rel(BigBankPlc.SoftwareSystems.InternetBanking.Containers.SinglePageApp, BigBankPlc.SoftwareSystems.InternetBanking.Containers.APIApplication, "Change Password", "HTTPS")
Rel(BigBankPlc.SoftwareSystems.InternetBanking.Containers.APIApplication, BigBankPlc.SoftwareSystems.InternetBanking.Containers.Database, "Update User Password", "TCP/IP, SQL")
Rel(BigBankPlc.SoftwareSystems.InternetBanking.Containers.APIApplication, BigBankPlc.SoftwareSystems.EMailSystem, "Send Password Changed Notification E-Mail", "SMTP")


@enduml
